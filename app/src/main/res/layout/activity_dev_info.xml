<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.myapplication.DevInfo"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ludarf_face"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view"
        android:layout_toLeftOf="@+id/devInfoCredit"
        android:layout_toStartOf="@+id/devInfoCredit"
        app:srcCompat="@drawable/ludarf_face" />

    <TextView
        android:id="@+id/devInfoCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개발자 정보 및 크레딧"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="300dp"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="17dp"
        android:background="@color/menuColor"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/devInfoCredit" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_above="@+id/devClose">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/devInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/devInfoN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="개발자 정보"
                    android:textSize="20dp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/devInfoN"
                    android:background="@color/menuColor" />

                <TextView
                    android:id="@+id/ash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/devInfoN"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="안소현"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ashEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ash"
                    android:layout_alignBottom="@+id/ash"
                    android:layout_alignLeft="@+id/khmEmail"
                    android:layout_alignStart="@+id/khmEmail"
                    android:paddingLeft="10dp"
                    android:text="ansh4393@gmail.com"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/khm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ash"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="김혜미"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/khmEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="zozon1330@gmail.com"
                    android:textSize="20dp"
                    android:layout_alignBaseline="@+id/khm"
                    android:layout_alignBottom="@+id/khm"
                    android:layout_toRightOf="@+id/khm"
                    android:layout_toEndOf="@+id/khm" />

                <TextView
                    android:id="@+id/jjn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="10dp"
                    android:text="장재나"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/khmEmail"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/jjn"
                    android:text="jaena96@gmail.com"
                    android:textSize="20dp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/jjn"
                    android:background="@color/menuColor" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/soundInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/soundInfoN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="성우 및 사운드 지원"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/saessapN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/soundInfoN"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="새쌉이 성우:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/saessapNN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/luN"
                    android:layout_toEndOf="@+id/saessapN"
                    android:layout_toRightOf="@+id/saessapN"
                    android:paddingLeft="8dp"
                    android:text="장재나"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/luN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saessapN"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="루달프 성우: 양유성"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/luEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/luN"
                    android:layout_alignBottom="@+id/luN"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:layout_toEndOf="@+id/saessapNN"
                    android:layout_toRightOf="@+id/saessapNN"
                    android:text="stardung86@gmail.com"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/luEmail"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="사운드 지원: @leng 윤지은"
                    android:textSize="20dp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/sound"
                    android:background="@color/menuColor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/designInfo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <TextView
                android:id="@+id/designInfoN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디자인"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>

                <TextView
                    android:id="@+id/DN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/designInfoN"
                    android:layout_marginTop="10dp"
                    android:elevation="1dp"
                    android:paddingLeft="10dp"
                    android:text="김혜미"
                    android:textSize="20dp" />
                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:background="@color/menuColor"
                    android:layout_below="@+id/DN" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gitInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/gitInfoN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="깃허브 주소"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/gitN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gitInfoN"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="https://github.com/GHHM/SeeSik/"
                    android:textSize="20dp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/gitN"
                    android:background="@color/menuColor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dbInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/dbInfoN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="디비 참조 : 식품안전나라"
                    android:textSize="20dp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/dbInfoN"
                    android:background="@color/menuColor" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:background="@color/menuColor"
        android:id="@+id/view" />

    <Button
        android:id="@+id/devClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닫기"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>