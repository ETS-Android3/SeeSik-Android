<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daily_evaluation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.myapplication.DailyEvaluation">

    <TextView   android:id="@+id/evaluationTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Today's evaluation"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/ingredientSet"
        android:layout_below="@+id/evaluationTitle"
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Na"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Fat"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Cholesterol"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugars"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout   android:id="@+id/barSet"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_toRightOf="@+id/ingredientSet"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/evaluationTitle"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/naBar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:indeterminateOnly="false"
            android:max="100" />

        <ProgressBar
            android:id="@+id/fatBar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/naBar"
            android:indeterminateOnly="false"
            android:max="100" />

        <ProgressBar
            android:id="@+id/cholBar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/fatBar"
            android:indeterminateOnly="false"
            android:max="100" />

        <ProgressBar
            android:id="@+id/sugarBar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/cholBar"
            android:indeterminateOnly="false"
            android:max="100" />
    </LinearLayout>

    <TextView   android:id="@+id/recommendText"
        android:layout_below="@+id/barSet"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:padding="25dp"
        android:text="This is a textfield for today's evaluation."
        android:textSize="20dp"
        />
    <Button android:id="@+id/recommendBtn"
        android:layout_below="@+id/recommendText"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:text="recommend"
        android:textSize="20dp"/>
</RelativeLayout>
